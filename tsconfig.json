{
  "compilerOptions": {
    "baseUrl": "./src",  // This is the base directory for resolving non-relative module names
    "paths": {
      "@/components/*": ["src/@/components/*"],  // This maps the alias `@/components` to `src/@/components`
      "@lib/*": ["src/@/lib/*"]  // Similarly, map other subdirectories as needed
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"  // This includes all files under the `src` directory
  ]
}
